{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schema/contract.json",
  "title": "Contract",
  "type": "object",
  "required": [
    "contract",
    "version",
    "inputs",
    "outputs",
    "guarantees"
  ],
  "properties": {
    "contract": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "version": {
      "type": "string",
      "pattern": "^v[0-9]+$"
    },
    "domain": {
      "type": "object",
      "properties": {
        "inputs_must_satisfy": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "total": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "inputs": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "properties": {
          "concept": {
            "type": "string"
          },
          "type": {
            "type": "string"
          }
        },
        "oneOf": [
          {
            "required": [
              "concept"
            ]
          },
          {
            "required": [
              "type"
            ]
          }
        ],
        "additionalProperties": false
      }
    },
    "outputs": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "properties": {
          "concept": {
            "type": "string"
          },
          "type": {
            "type": "string"
          }
        },
        "oneOf": [
          {
            "required": [
              "concept"
            ]
          },
          {
            "required": [
              "type"
            ]
          }
        ],
        "additionalProperties": false
      }
    },
    "guarantees": {
      "type": "object",
      "required": [
        "semantic"
      ],
      "properties": {
        "semantic": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "acceptance": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "meta": {
      "type": "object",
      "description": "Non-normative realization constraints and guidance.",
      "properties": {
        "realization": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "additionalProperties": false
    },
    "determinism": {
      "type": "object",
      "properties": {
        "guaranteed": {
          "type": "boolean"
        },
        "assumptions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}