{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schema/concept.json",
  "title": "Concept",
  "type": "object",
  "required": [
    "concept",
    "version",
    "definition"
  ],
  "properties": {
    "concept": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$"
    },
    "version": {
      "type": "string",
      "pattern": "^v[0-9]+$"
    },
    "definition": {
      "type": "string",
      "minLength": 1
    }
  },
  "additionalProperties": false
}